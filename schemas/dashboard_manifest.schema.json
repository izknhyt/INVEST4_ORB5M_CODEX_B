{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/dashboard_manifest.schema.json",
  "title": "Dashboard Export Manifest",
  "type": "object",
  "required": ["sequence", "generated_at", "job_id", "datasets", "provenance"],
  "additionalProperties": false,
  "properties": {
    "sequence": {
      "type": "integer",
      "minimum": 1
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "job_id": {
      "type": "string",
      "pattern": "^[0-9TZ:-]+-[a-z0-9_-]+$"
    },
    "datasets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "dataset",
          "path",
          "checksum_sha256",
          "row_count",
          "generated_at",
          "source_hash"
        ],
        "additionalProperties": false,
        "properties": {
          "dataset": {
            "type": "string",
            "enum": ["ev_history", "slippage", "turnover", "latency"]
          },
          "path": {
            "type": "string",
            "minLength": 1
          },
          "checksum_sha256": {
            "type": "string",
            "pattern": "^[A-Fa-f0-9]{64}$"
          },
          "row_count": {
            "type": "integer",
            "minimum": 0
          },
          "generated_at": {
            "type": "string",
            "format": "date-time"
          },
          "source_hash": {
            "type": "string",
            "pattern": "^[A-Fa-f0-9]{64}$"
          }
        }
      }
    },
    "provenance": {
      "type": "object",
      "required": ["command", "commit_sha", "inputs"],
      "additionalProperties": true,
      "properties": {
        "command": {
          "type": "string"
        },
        "commit_sha": {
          "type": "string"
        },
        "inputs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        }
      }
    }
  }
}
